{
  "name": "generate-project-boilerplate",
  "version": "0.1.0",
  "main": "index.js",
  "repository": "git@git.code.oa.com:easy-client/generate-project-boilerplate.git",
  "author": "kevingui <kevingui@tencent.com>",
  "license": "ISC",
  "scripts": {
    "lint": "eslint packages --ext .jsx,js,ts,tsx",
    "lint:fix": "eslint packages --ext .jsx,js,ts,tsx --fix",
    "prettier:fix": "prettier packages --write",
    "dev": "tsc -w"
  },
  "bin": {
    "cyber": "dist/bin/create-project.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@types/inquirer": "^7.3.1",
    "@types/node": "12.19.0",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "babel-eslint": "^10.1.0",
    "chalk": "^4.1.0",
    "commander": "^6.2.1",
    "commitizen": "^4.2.2",
    "commitlint-config-cz": "^0.13.2",
    "cross-env": "^7.0.3",
    "cz-customizable": "^6.3.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "husky": "^4.3.6",
    "inquirer": "^7.3.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "semver": "^7.3.4",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{jsx,js}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{tsx,ts}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.js"
    }
  },
  "dependencies": {
    "global": "^4.4.0",
    "i": "^0.3.6",
    "lerna-wizard": "^1.1.1"
  }
}
